# HopeSecure Backend Environment Configuration
# Copy this file to .env and configure according to your setup

# Database Configuration
# Set to True for PostgreSQL, False for SQLite
USE_POSTGRES=False

# PostgreSQL Configuration (only needed if USE_POSTGRES=True)
DB_NAME=hopesecure-statuscode
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here
DB_HOST=localhost
DB_PORT=5432

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080,http://127.0.0.1:8080,http://localhost:8081,http://127.0.0.1:8081

# SendGrid Configuration for Email Sending
SENDGRID_API_KEY=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=security@yourdomain.com
SENDGRID_TEMPLATE_ID=your-sendgrid-template-id
SENDGRID_WEBHOOK_URL=https://yourdomain.com/api/sendgrid/webhook/

# Email Domain Settings for Phishing Simulation
PHISHING_DOMAIN=your-phishing-domain.com
TRACKING_DOMAIN=track.your-domain.com

# Application URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Setup Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your actual values
# 3. For SQLite (easy): Set USE_POSTGRES=False
# 4. For PostgreSQL: Set USE_POSTGRES=True and configure DB_* variables
# 5. Sign up for SendGrid and get API key
# 6. Configure your phishing domains
